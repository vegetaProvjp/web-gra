					<div class="p-r-50 p-t-5 p-lr-0-lg">
						<h4 class="mtext-105 cl2 js-name-detail p-b-14">
							{{product.name}}
						</h4>
						{{!-- Nếu mà sale = 0 --}}
						{{#if (compare0 product.sale)}}
						<span class="mtext-106 cl2">
							{{computeSale product.price product.sale}}
						</span>
						<span style="margin-left: 12px" class="separate-price mtext-100 cl4">
							{{currencyVND product.price}}   	
						</span>
						{{else}}
						<span class="mtext-106 cl2">
							{{currencyVND product.price}}
						</span>
						{{/if}}
						{{#if success}}
						<p>{{success}}</p>
						{{/if}}
						<br>
						{{#if (compare0 product.sale)}}
						<h4 class="p-t-10">
							<span class="badge bg-danger">Giảm {{product.sale}}%</span>
						</h4>

						{{/if}}
						<p style="white-space: pre-line;" class="stext-102 cl3">
							{{product.description}}
						</p>
						{{#if (check_quantity product.quantity)}}
						<div class="col-12" style="font-size: 2em;">
							<h5>Số lượng: </h5>
						</div>
						<p style="padding-left: 20px; color: rgb(36, 36, 36)">{{product.quantity}} sản phẩm có sẵn</p>
						{{else}}
						<div  class="col-12" style="font-size: 2em; color: rgb(226, 39, 39)">
							<h5>Mặt hàng này đã hết </h5>
						</div>
						{{/if}}

