<link rel="stylesheet" href="/css/cart.css">
<link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.min.css">
<script src="https://netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script src="https:///code.jquery.com/jquery-1.11.1.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
{{#if products}}
<div class="container mb-4 mt-6">
    <div class="grid mt-6">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col"> </th>
                            <th scope="col">Tên</th>

                            <th scope="col" class="text-center">Số lượng</th>
                            <th scope="col" class="text-right">Giá</th>
                            <th> </th>
                        </tr>
                    </thead>

                    <tbody>
                        {{#each products}}
                        <tr>
                            <td><img src="{{this.item.image.[0].url}}" width=50 height=50 /></td>
                            <td><a href="/product/{{this.item.slug}}">{{this.item.name}}</a></td>

                            <td>
                                <div class="center">
                                    <div class="input-group">
                                        <a href="/product/reduce/{{this.item._id}}" class="input-group-btn">
                                            <button type="button" class="btn btn-default btn-number" data-type="minus"
                                                data-field="quant[1]">
                                                <span class="glyphicon glyphicon-minus"></span>
                                                <span><i class="fas fa-minus-square"></i></span>
                                            </button>
                                        </a>
                                        <input type="text" name="quant[1]" class="form-control input-number"
                                            value="{{this.qty}}" min="1" max="10">
                                        <a href="/product/increase/{{this.item._id}}" class="input-group-btn">
                                            <button type="button" class="btn btn-default btn-number" data-type="plus"
                                                data-field="quant[1]">
                                                <span class="glyphicon glyphicon-plus"></span>
                                                <span><i class="fas fa-plus-square"></i></span>
                                            </button>
                                        </a>
                                    </div>
                                </div>
                            </td>
                            <td class="text-right">{{currencyVND this.price}}</td>
                            <td class="text-right"><a href="/product/remove/{{this.item._id}}"
                                    class="btn btn-sm btn-danger"><i class="fa fa-trash"></i>
                                </a> </td>
                        </tr>
                        {{/each}}
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><strong>Tổng số tiền</strong></td>
                            <td class="text-right"><strong>{{currencyVND totalPrice}}</strong></td>
                        </tr>

                    </tbody>

                </table>
            </div>
        </div>
        <div class="col mb-2">
            <div class="row">
                {{#if fail}}
                <div class="col-md-12 text-success" style="font-size: 16px;">{{fail}}</div>
                {{/if}}
                <div class="col-sm-12  col-md-6">
                    <button class="btn btn-block btn-light">Tiếp tục mua</button>
                </div>
                <div class="col-sm-12 col-md-6 text-right">
                    <a href="/user/checkout-address" class="btn btn-lg btn-block btn-success text-uppercase">Thanh toán</a>
                </div>
            </div>
        </div>
    </div>
</div>

{{else}}
<div class="grid mt-4 mb-4">
    <div style="text-align: center;">
        <h2>Giỏ hàng của bạn trống</h2>
    </div>
</div>
{{/if}}