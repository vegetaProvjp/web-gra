<link rel="stylesheet" href="/bootstrap/bootstrap.min.css">
<link rel="stylesheet" href="/css/create-product.css" />

<div class="container bootstrap snippet " style="margin-top: 100px; z-index: 2">
    <div class="main-body grid">
        <div class="col-md-9  grid">
            <div class="wrapper wrapper--w900">
                <div class="card card-6" style="border: none;">
                    <div class="card-body">
                        {{#if data.success}}
                        <div class="text-success text-center" style="font-size: 24px;">{{data.success}}</div>
                        {{/if}}
                        {{#if data.error}}
                        <div class="text-danger text-center" style="font-size: 24px;">{{data.error}}</div>
                        {{/if}}
                        <form action="/admin/create-product" method="POST" class="form-create" id="form-create"
                            enctype="multipart/form-data">
                            <div class="form-row">
                                <div class="name">Tên sản phẩm</div>
                                <div class="value">
                                    <input class="input--style-6" type="text" name="name">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-8">
                                    <input type="file" class="form-control" name="image" id="formFile" multiple>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="name">Giá</div>
                                <div class="value">
                                    <div class="input-group">
                                        <input class="input--style-6" type="text" name="price">
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="name">Số lượng</div>
                                <div class="value">
                                    <div class="input-group">
                                        <input type="number" class="input--style-6" name="quantity" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="name">Tiêu đề</div>
                                <div class="value">
                                    <div class="input-group">
                                        <input type="text" class="input--style-6" name="title" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="name">Thể loại</div>
                                <div class="value">
                                    <select name="category" class="input--style-6" style="height: 40px;">
                                        {{#each category}}
                                        <option value="{{this._id}}">{{this.title}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="name">Miêu tả sản phẩm</div>
                                <div class="value">
                                    <div class="input-group">
                                        <textarea class="textarea--style-6" name="description"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-center">
                                <button class="btn btn--radius-2 btn--blue-2 btn-submit" type="submit">Thêm sản phẩm</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
        <!--/row-->
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="preview-images"></div>
        </div>
    </div>
</div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="/bootstrap/bootstrap.min.js"></script>


